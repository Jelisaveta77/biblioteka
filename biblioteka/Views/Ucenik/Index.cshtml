@model IEnumerable<WebApplication1.Models.UcenikModel>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View</h2>


<a href="/Ucenik/Create" class="btn btn-warning">Dodaj novog ucenika</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GodinaRodjenja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojUDnevniku)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Razred)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Odeljenje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GodinaRodjenja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojUDnevniku)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Razred)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Odeljenje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                <a href="/Ucenik/Edit" class="btn btn-warning">Edit</a>
            </td>
            <td>
                <a href="/Ucenik/Details" class="btn btn-primary">Details</a>
            </td>
            <td>
                <a href="/Ucenik/Delete" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>
