@model IEnumerable<WebApplication1.Models.PozajmiceModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<a href="/Pozajmice/Create" class="btn btn-warning">Create</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UcenikId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KnjigaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumPozajmice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumVracanja)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UcenikId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KnjigaId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumPozajmice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumVracanja)
        </td>
        <td>
            <a href="/Pozajmice/Edit/@item.Id" class="btn btn-warning">Edit</a>
        </td>
        <td>
            <a href="/Pozajmice/Details/@item.Id" class="btn btn-primary">Details</a>
        </td>
        <td>
            <a href="/Pozajmice/Delete/@item.Id" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>
