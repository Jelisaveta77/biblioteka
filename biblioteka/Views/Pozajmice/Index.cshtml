@model IEnumerable<WebApplication1.Models.PozajmiceModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DatumPozajmice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumVracanja)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        

        <td>
            @Html.DisplayFor(modelItem => item.DatumPozajmice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumVracanja)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
    <tr>
        <td colspan="4">
           Ucenik:  @item.Ucenik.Ime @item.Ucenik.Prezime @item.Ucenik.Razred @item.Ucenik.Odeljenje
        </td>
    </tr>
    <tr>
        <td colspan="4">
            Knjiga: @item.Knjiga.KnjigaId    @item.Knjiga.Naslov @item.Knjiga.InventarniBroj
        </td>
    </tr>
}

</table>
